<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px100">

        <LinearLayout
            android:id="@+id/top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="22px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="22px">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@mipmap/ic_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/divider_px100"
            android:paddingRight="@dimen/divider_px100"
            android:paddingTop="@dimen/divider_px10"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/px36" />

        <LinearLayout
            android:id="@+id/top_bar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="16px"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:paddingTop="25px">

            <ImageView
                android:id="@+id/mSearch"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="right"
                android:src="@mipmap/ic_home_search"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mShare"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/divider_px30"
                android:src="@mipmap/ic_love_top_share"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_top_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jump"
                android:layout_gravity="center"
                android:textColor="@color/c_4B4B4B"
                android:textSize="@dimen/divider_px30"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/include_div_2px" />
</LinearLayout>