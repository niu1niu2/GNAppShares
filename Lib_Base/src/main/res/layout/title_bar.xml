<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_px100">

        <LinearLayout
            android:id="@+id/top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="22px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="22px">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@mipmap/ic_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/divider_px100"
            android:paddingRight="@dimen/divider_px100"
            android:textColor="@color/text_white"
            android:textSize="@dimen/px36" />

        <LinearLayout
            android:id="@+id/top_bar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="22px"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:paddingTop="22px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/top_bar_right_image"
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@mipmap/icon_share" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/top_bar_right_shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="22px"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:paddingTop="22px"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/shop_car_num"
                android:layout_width="44px"
                android:layout_height="44px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_nav_spbag" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="8px"
                        android:layout_height="8px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8px"
                        android:background="@color/bg_orange" />

                    <TextView
                        android:id="@+id/mToCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="2px"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_white"
                        android:textSize="18px" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>