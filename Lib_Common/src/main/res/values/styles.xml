<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wide_div</item>
        <item name="colorPrimaryDark">@color/wide_div</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!-- 因为已经有toolBar 设置NoActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:clipToPadding">true</item>
        <!--右边的文本的字体大小-->
        <item name="android:textSize">15sp</item>
        <!--主标题的颜色-->
        <item name="android:textColorPrimary">@color/theme</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/primaryColorDark</item>

        <!-- 窗口的背景颜色 -->
        <item name="colorAccent">@color/accentColor</item>
        <!--右边的文本的颜色-->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/tran_in</item>
        <item name="android:activityOpenExitAnimation">@anim/tran_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/tran_pre_in</item>
        <item name="android:activityCloseExitAnimation">@anim/tran_pre_out</item>
    </style>


    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/tran_in</item>
        <item name="android:activityOpenExitAnimation">@anim/tran_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/tran_pre_in</item>
        <item name="android:activityCloseExitAnimation">@anim/tran_pre_out</item>
    </style>


    <!-- 底部弹出框样式 -->
    <!--<style name="BottomPopDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
