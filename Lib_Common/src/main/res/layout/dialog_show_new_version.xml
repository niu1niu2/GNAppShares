<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black3">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/divider_px104"
        android:layout_marginRight="@dimen/divider_px72"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divider_px32"
            android:layout_marginTop="@dimen/divider_px32"
            android:background="@drawable/bg_white3_radius_5"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/divider_px48"
                android:layout_marginRight="@dimen/divider_px48"
                android:layout_marginTop="@dimen/divider_px48"
                android:gravity="center"
                android:text="发现新版本"
                android:textColor="@color/background_bg"
                android:textSize="@dimen/divider_px36"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/divider_px92"
                android:layout_marginRight="@dimen/divider_px92"
                android:layout_marginTop="@dimen/divider_px40"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更新内容:"
                    android:textColor="@color/background_bg"
                    android:textSize="@dimen/divider_px24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_bg"
                    android:textSize="@dimen/divider_px24"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginTop="@dimen/divider_px20"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_bg"
                    android:textSize="@dimen/divider_px24"
                    android:layout_marginTop="@dimen/divider_px20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_apk_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/divider_px10"
                    android:textColor="@color/background_bg"
                    android:textSize="@dimen/divider_px24"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_px80"
                android:layout_marginBottom="@dimen/divider_px40"
                android:layout_marginTop="@dimen/divider_px40">

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="@dimen/divider_px220"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/shopcart_goods_submit"
                    android:gravity="center"
                    android:text="立即更新"

                    android:textColor="@color/white"
                    android:textSize="@dimen/divider_px32" />

                <com.guinong.lib_commom.widget.dialog.FlikerProgressBar
                    android:id="@+id/flikerbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/divider_px32"
                    android:layout_marginRight="@dimen/divider_px32"
                    android:background="@color/gray_line"
                    android:textSize="@dimen/divider_px32"
                    android:visibility="gone"
                    app:loadingColor="@color/shopcart_goods_submit"
                    app:mtextSize="16sp"
                    app:stopColor="@color/shopcart_goods_submit" />
            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/divider_px64"
            android:layout_height="@dimen/divider_px64"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@mipmap/delete" />

    </RelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>